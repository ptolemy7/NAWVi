#Maintainer: Dalton Sconce <dsconce@protonmail.com>
pkgname=nawvi
pkgver=0.1
pkgrel=1
epoch=
pkgdesc="A viewer powered by WebKitGtk for a native copy of the Arch Wiki"
arch=("any")
url=""
license=('GPL')
groups=()
depends=( 'coreutils' 'arch-wiki-docs' 'gtk3' 'webkit2gtk' 'arch-wiki-docs-lite')
conflicts=( 'dialog' )

makedepends=( 'meson' 'vala' )
install=
source=("${pkgname}-${pkgver}.tar.gz::https://github.com/ptolemy7/NAWVi/raw/pkgbuild/tarball/v${pkgver}.tar.gz")
# source=("tarball.tar.gz")
build() {
    pwd
    meson build --prefix=/usr
    ninja -C build
}
package() {
  DESTDIR="${pkgdir}" ninja -C build install
}


md5sums=('c1718bfe0dc9c677703b4b6c4d445900')
